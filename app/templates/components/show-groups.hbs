{{#each groups as |group|}}
{{#if isEditingGroup}}
  {{edit-group grp=group model=model toggleEditGroup=(action 'edit') triggerEditGroup=triggerEditGroup}}
{{else}}
<div class="alert alert-info">
  <div class="clearfix">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4{{action 'edit'}}>{{group.name}}</h4>
    <hr>
  </div>

  {{#if group.attendees}}
  {{#each group.attendees as |attendee|}}
  {{attendee.name}}
  {{/each}}
  {{/if}}

  {{#if group.expenses}}
  {{#each group.expenses as |exp|}}
  {{exp.name}} - ${{exp.amount}}
  {{/each}}
  {{/if}}
</div>
{{/if}}
{{/each}}
