<table class="table table-hover">
  <thead>
    <tr>
      <th>Attendee</th>
      <th>Share</th>
      <th>Expenses</th>
      <th>Owes $</th>
    </tr>
  </thead>
  <tbody>
    {{#each attendees as |attendee|}}
    <tr>
      <td>{{attendee.name}}</td>
      <td>{{attendee.amount_due}}</td>
      <td>{{attendee.total_expenses}}</td>
      <td>{{attendee.balance}}</td>
    </tr>
    {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <td><b>Total</b></td>
      <td><b>${{totalDue}}</b></td>
      <td></td>
      <td></td>
    </tr>
  </tfoot>
</table>