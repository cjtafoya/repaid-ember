<div class="col-md-6 col-md-offset-3">
  <h1>Log In <small>to see your gatherings</small></h1>
  <hr>
  <div class="well">
    <form {{action 'authenticate' on='submit'}}>
      <div class="form-group">
        <label for="identification">Email</label>
        {{input id='identification' value=identification class="form-control"}}
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        {{input type='password' id='password' value=password class="form-control"}}
      </div>
      <div class="">
        <button type="submit" class="btn btn-danger">Login</button>
      </div>
    </form>
  </div>
</div>