<div class='row'>  
  <div class='col-md-4 col-md-offset-4'>
    <div class="form-group">
      <h5><label for="name" class="sr-only">Name</label></h5>
      {{input value=model.name id="name" class='form-control' placeholder="Event name"}}<br>

      <h5><label for="tagline" class="sr-only">Tagline</label></h5>
      {{input value=model.tagline id="tagline" class='form-control' placeholder="Tagline (optional)"}}<br>

      <button {{action 'save' model}} id="save-gathering" class='btn btn-success'>Create!</button>
    </div>
  </div>
</div>